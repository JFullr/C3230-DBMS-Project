<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="edu.westga.cs3230.healthcare_dbms.view.AppointmentCheckupGuiCodeBehind"
          prefHeight="400.0" prefWidth="600.0">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Label text="Add Appointment Checkup Details">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <GridPane GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Systolic Blood Pressure" />
                <Label text="Diastolic Blood Pressure" GridPane.rowIndex="1" />
                <Label text="Pulse" GridPane.rowIndex="2" />
                <Label text="Weight" GridPane.rowIndex="3" />

                <TextField fx:id="systolicBloodPressureTextField" GridPane.columnIndex="1" />
                <TextField fx:id="diastolicBloodPressureTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="pulseTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="weightTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>
        <Button GridPane.rowIndex="2" onAction="#addCheckupDetails" text="Add Checkup" />
    </children>
</GridPane>
